<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorOnPrimary"
    tools:context=".CheckOut">

    <TextView
        android:id="@+id/textViewHomeDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Details: "
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />

    <TextView
        android:id="@+id/textViewType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Home Type"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHomeDetail" />

    <RadioGroup
        android:id="@+id/radioGroupHome"
        android:layout_width="340dp"
        android:layout_height="143dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewType">

        <RadioButton
            android:id="@+id/radioButtonHome1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="home1" />

        <RadioButton
            android:id="@+id/radioButtonHome2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="home2" />

        <RadioButton
            android:id="@+id/radioButtonHome3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="home3" />
    </RadioGroup>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp"
        android:text="@string/btnNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupHome" />


</androidx.constraintlayout.widget.ConstraintLayout>